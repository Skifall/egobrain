#include <stdio.h>
#include <stdlib.h>

int main()
{
    char string1[255], string2[255];
    free(string1);
    free(string2);
    fgets(string1 , 255, stdin);
    fgets(string2 , 255, stdin);
    int i,j,k,f;
    k=0;
    f=1;
    for(i=0;i<=strlen(string2)-1;i++){
        if (string1[0]==string2[i]) {
            for (j=0;j<strlen(string1);j++){
                if (string1[j]!=string2[i+j]){
                        f=0;
                        break;
                    }
            }
        }
        if (f==1) {k++;}
        f=1;
    }
    printf("%d",k);
    return 0;
}
